@using Microsoft.AspNetCore.Identity
@inject SignInManager<AVC.IdentityModels.IdentityUser> SignInManager
@inject UserManager<AVC.IdentityModels.IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="dx-item dx-toolbar-item dx-toolbar-label">
        <div class="dx-item-content dx-toolbar-item-content">
            <form method="get" class="form-inline" action="/manage/index">
                <button  type="button" class="nav-link btn btn-link text-dark">@User.Identity.Name</button>
            </form>
        </div>
    </div>
    <div class="dx-item dx-toolbar-item dx-toolbar-label">
        <div class="dx-item-content dx-toolbar-item-content">
            <form method="post" class="form-inline" action="/account/logout">
                @Html.AntiForgeryToken()
                <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </div>
    </div>
}
else
{
    <div class="dx-item dx-toolbar-item dx-toolbar-label">
        <div class="dx-item-content dx-toolbar-item-content">
            <form method="get" class="form-inline" action="/account/register">
                <button  type="submit" class="nav-link btn btn-link text-dark">Register</button>
            </form>
        </div>
    </div>
    <div class="dx-item dx-toolbar-item dx-toolbar-label">
        <div class="dx-item-content dx-toolbar-item-content">
            <form method="get" class="form-inline" action="/account/login">
                <button  type="submit" class="nav-link btn btn-link text-dark">Login</button>
            </form>
        </div>
    </div>
}